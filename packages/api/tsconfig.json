{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@vip-ride/domain/*": ["../domain/dist/*"],
      "@vip-ride/application/*": ["../application/dist/*"],
      "@vip-ride/infrastructure/*": ["../infrastructure/dist/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}

