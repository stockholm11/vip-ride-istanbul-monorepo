{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@vip-ride/domain/*": ["../domain/dist/*"],
      "@vip-ride/application/*": ["../application/dist/*"],
      "@vip-ride/infrastructure/*": ["../infrastructure/dist/*"],
      "@vip-ride/api/*": ["src/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist"]
}
